{
	"name": "minecraft-dwww",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-scripts": "3.2.0"
	},
	"scripts": {
		"build:css": "postcss src/styles/index.css -o src/index.css",
		"watch:css": "postcss src/styles/index.css -o src/index.css -w",
		"postbuild": "purgecss --config ./purgecss.config.js --out build/static/css/",
		"test": "purgecss --css build/static/css/*.css --content build/static/css/*.css build/static/js/*.js build/static/index.html --out build/static/css",
		"start": "yarn watch:css && react-scripts start",
		"build": "yarn build:css && react-scripts build && yarn postbuild",
		"eject": "react-scripts eject"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"autoprefixer": "^9.7.3",
		"postcss-cli": "^6.1.3",
		"postcss-import": "^12.0.1",
		"postcss-nested": "^4.2.1",
		"tailwindcss": "^1.1.4"
	}
}
