{
	"name": "minecraft-block-frontend",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.2.0"
	},
	"scripts": {
		"css:build": "postcss src/styles/_main.css -o src/index.css",
		"css:watch": "postcss src/styles/_main.css -o src/index.css -w",
		"start": "NODE_ENV=development yarn css:watch & react-scripts start",
		"build": "NODE_ENV=production yarn css:build && react-scripts build",
		"eject": "react-scripts eject"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"autoprefixer": "^9.7.3",
		"postcss-cli": "^6.1.3",
		"postcss-import": "^12.0.1",
		"postcss-nested": "^4.2.1",
		"tailwindcss": "^1.1.4",
		"typescript": "^3.7.4"
	}
}
